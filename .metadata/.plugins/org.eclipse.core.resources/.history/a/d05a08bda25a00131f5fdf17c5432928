#ifndef LISTEN_H_
#define LISTEN_H_

class PortListen : public Controls {
private:
	PortListen();

	struct sockaddr_in sa;
	int sock;

	int listen, conn;
	char* recvData = new char[1024];
	int bytes;

public:
	~PortListen();
	virtual ~listen();
};

#endif /* LISTEN_H_ */

